<h1 class="small-margin">Code snippets</h1>
{{>snippetsmenu}}
{{#if viewData.snippets.length }}
{{#each viewData.snippets}}
<div class="input-bg">
  <textarea name="snippet" rows="20" cols="60">{{this.snippet}}</textarea>
  <br><br>
  <input class="button" type="submit" value="Edit">
</form>
</div>
<br>
{{/each}}
{{else}}
<div class="input-bg">
<form method="post" action="/snippets/create">
  <textarea name="message" rows="20" cols="60">There are no code snippets to display</textarea>
  <br><br>
  <input class="button" type="submit" value="Edit">
</form>
</div>
{{/if}}